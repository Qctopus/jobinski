# Source Database Configuration (Azure PostgreSQL or primary source)
DATABASE_URL=postgresql://username:password@your-azure-host:5432/jobs_analytics
DB_HOST=your-azure-host.postgres.database.azure.com
DB_PORT=5432
DB_NAME=jobs_analytics
DB_USER=your_username
DB_PASSWORD=your_password
DB_SSL=true

# Neon Database Configuration (Production - powers Vercel deployment)
# Get this from your Neon dashboard: https://console.neon.tech
NEON_DATABASE_URL=postgresql://username:password@your-neon-host.neon.tech:5432/neondb?sslmode=require

# Server Configuration
PORT=5000
NODE_ENV=development

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Authentication (if needed later)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Logging
LOG_LEVEL=info

# Classification Configuration
CLASSIFICATION_BATCH_SIZE=100
AUTO_CLASSIFY_ON_INSERT=true
CONFIDENCE_THRESHOLD=70

