# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/jobs_analytics
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jobs_analytics
DB_USER=your_username
DB_PASSWORD=your_password
DB_SSL=false

# Server Configuration
PORT=5000
NODE_ENV=development

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Authentication (if needed later)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Logging
LOG_LEVEL=info

# Classification Configuration
CLASSIFICATION_BATCH_SIZE=100
AUTO_CLASSIFY_ON_INSERT=true
CONFIDENCE_THRESHOLD=70

